<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <TargetFrameworks>net451;net461</TargetFrameworks>
        <RootNamespace />
        <IsPackable>true</IsPackable>
        <AssemblyName>Vertical.Assembly</AssemblyName>
        <PackageId>Vertical.Package</PackageId>
        <PackageVersion>1.0.0-DEV</PackageVersion>
        <Version>2.0.0</Version>
        <VersionPrefix>3.0.0</VersionPrefix>
        <VersionSuffix>DEV</VersionSuffix>
    </PropertyGroup>

    <ItemGroup Condition="'$(TargetFramework)'=='.NetCoreApp3.0'">
        <PackageReference Include="Dotnet.Glob" Version="3.0.5" />
        <PackageReference Include="microsoft.extensions.dependencyinjection" Version="3.0.1" />
        <PackageReference Include="serilog.sinks.console" Version="3.1.1" />
        <PackageReference Include="system.io.abstractions" Version="7.0.7" />
        <PackageReference Include="vertical-commandline" Version="1.0.2" />
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="microsoft.extensions.logging" Version="3.0.1" />
        <PackageReference Include="microsoft.extensions.objectpool" Version="3.0.1" />
    </ItemGroup>

</Project>
